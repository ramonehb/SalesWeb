@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Apagar Departamento";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Nome</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Gravar" class="btn btn-default" /> <br /><br />
        <a asp-action="Index">Voltar para lista</a>
    </form>
</div>
